<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyStateRootView"
    android:background="?android:colorBackground"
    android:translationZ="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:srcCompat="@drawable/ic_undraw_empty_cart"
            />
        <TextView
            android:id="@+id/cartEmptyStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline5"
            android:text="@string/cartEmptyStateLoginRequired"
            android:layout_marginTop="32dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cartEmptyStateCTABtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cartEmptyStateCallToAction"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

</FrameLayout>