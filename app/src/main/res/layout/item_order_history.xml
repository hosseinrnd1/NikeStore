<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_order_history_item"
    android:layoutDirection="rtl">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBody1"
            android:text="@string/orderId_OrderHistory"
            android:textStyle="bold"
            android:layout_gravity="start|center_vertical"
            />
        <TextView
            android:id="@+id/orderID_OrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBody1"
            tools:text="78"
            android:textStyle="bold"
            android:layout_gravity="end|center_vertical"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?dividerColor"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBody1"
            android:text="@string/orderPrice_OrderHistory"
            android:textStyle="bold"
            android:layout_gravity="start|center_vertical"
            />
        <TextView
            android:id="@+id/orderPrice_OrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBody1"
            tools:text="4990000"
            android:textStyle="bold"
            android:layout_gravity="end|center_vertical"
            />
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:padding="16dp"
        android:clipToPadding="false"
        >
        <LinearLayout
            android:id="@+id/orderHistoryProductLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

       />
    </HorizontalScrollView>
</LinearLayout>